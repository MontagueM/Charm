<Window x:Class="Charm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Charm"
        mc:Ignorable="d"
        Loaded="OnControlLoaded"
        PreviewKeyDown="MainWindow_PreviewKeyDown"
        Title="Charm" Height="1080" Width="1920" Background="White">
    <Window.Resources>
        <Storyboard x:Key="Storyboard1"/>
    </Window.Resources>
    <Grid Background="{DynamicResource BackgroundColour7}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Settings">
                <MenuItem Header="Config panel" Click="OpenConfigPanel_OnClick" d:IsHidden="True"/>
                <MenuItem Header="Log panel" Click="OpenLogPanel_OnClick" d:IsHidden="True"/>
            </MenuItem>
        </Menu>
        <TabControl Grid.Row="1" x:Name="MainTabControl">
            <TabItem Header="MAIN MENU" x:Name="MainMenuTab">
                <local:MainMenuView BorderBrush="Black" OpacityMask="Black" Background="{DynamicResource BackgroundColour7}"/>
            </TabItem>
        </TabControl>
        <local:ProgressView x:Name="ProgressView" Grid.Row="0" Grid.RowSpan="2" Height="1080" Width="1920" d:IsHidden="True" Background="{DynamicResource BackgroundColour7}" BorderBrush="{DynamicResource BackgroundColour7}"/>
    </Grid>
</Window>